{
  "extends": ["stylelint-config-standard", "stylelint-config-prettier"],
  "rules": {
    "color-hex-length": "short",
    "selector-class-pattern": [
      "^[a-z]([a-z0-9-]*)(__[a-z0-9-]+)?(--[a-z0-9-]+)?$",
      {
        "message": "Expected class selector to follow BEM naming"
      }
    ]
  }
}
